# ===== Datadog 공통 =====
DD_SITE=datadoghq.com
DD_API_KEY=
DD_ENV=workshop-local
DD_SERVICE=quantumhound
DD_VERSION=0.1.0

# LLMObs (Agentless 전송) — 사용 시 1
DD_LLMOBS_ENABLED=0
DD_LLMOBS_AGENTLESS_ENABLED=true
DD_LLMOBS_ML_APP=quantumhound-llm

# APM (Agent 경유 전송) — 사용 시 1
DD_APM_ENABLED=1
DD_TRACE_SAMPLE_RATE=1.0

# ===== LLM / 모델 =====
LLM_PROVIDER=ollama
OPENAI_BASE_URL=http://localllama:11434/v1
OPENAI_API_KEY=ollama
MODEL_NAME=llama3.1

# ===== RAG =====
CHROMA_URL=http://vector-store:8000
INDEX_NAME=kb_demo
TOP_K=4

# ===== 서버 =====
HOST=0.0.0.0
PORT=8080

# ===== OTel (Datadog Exporter) =====
OTEL_ENABLED=1
# 1) Agent 경유 (추천): datadog-agent:8126 사용
OTEL_EXPORTER_DATADOG_AGENT_URL=http://datadog-agent:8126
# 2) Agentless(직접 전송): 아래 주입 시 사용
DD_API_KEY=
DD_SITE=datadoghq.com
DD_ENV=workshop-local
DD_SERVICE=quantumhound
DD_VERSION=0.1.0
